import urllib2
from urllib2 import urlopen
import re
import cookielib
from cookielib import CookieJar
import time

cj = CookieJar()
opener = urllib2.build_opener(urllib2.HTTPCookieProcessor(cj))
opener.addheaders = [('User-agent','Mozilla/5.0')]


def main():
    try:
        page = 'http://www.huffingtonpost.com/feeds/index.xml'
        sourcecode = opener.open(page).read()
        #print sourcecode
    
        try:
            titles = re.findall(r'<title>(.*?)</title>',sourcecode)
            #for title in titles:
             #   print title
            #links = re.findall(r'<link.*?href="(.*?)"',sourcecode)
            links = re.findall(b'<link>(.*?)</link>', sourcecode)
            for link in links:
                if '.rdf' in link:
                    pass
                else:
                    print ' _____________________________________'
                    linkSource = opener.open(link).read()
                    #content = re.findall(r'<p>(.*?)</p>',linkSource)
                    #content = re.findall(r'<p>((.|\n)*)<p>___</p>',linkSource)
                    content = re.findall(r'<p>(.*?)</p>',linkSource)
                    linesOfInterest = re.findall(r'<p>(.*?)</p>',str(content))
                    print 'Content:'
                    for theContent in content:
                        print theContent

                    time.sleep(3)

        except Exception, e:
            print str(e)


    except Exception, e:
        print str(e)


main()

